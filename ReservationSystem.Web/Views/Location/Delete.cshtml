@model LocationDeleteViewModel
@{
    ViewBag.Title = "Delete House";
}
<h2 class="text-center">@ViewBag.Title</h2>
<hr />
<form asp-action="Delete">
    <div class="row">
        <div class="col-md-4">
            <img class="card-img-top" src="@Model.ImageUrl" alt="House Image">
        </div>
        <div class="col-md-8">
            <h3>Are you sure you want to delete the following location?</h3>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group mt-2">
                <a class="btn btn-primary" asp-controller="Home" asp-action="Index">No, Cancel</a>

                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </div>
    </div>
</form>
