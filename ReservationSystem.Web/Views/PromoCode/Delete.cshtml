@model ReservationSystem.Data.Models.PromoCode

<h2>Are you sure you want to remove this PromoCode?</h2>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">Discount: @Model.Discount%</p>
    </div>
</div>

<form asp-action="Delete" asp-controller="PromoCode" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a class="btn btn-primary" asp-action="All">No, Cancel</a>
</form>